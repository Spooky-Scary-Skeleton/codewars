<div><%= problem.title %></div>
<div>정답자 수: <%= problem.completed_users %></div>
<div>난이도: Level <%= problem.difficulty_level %></div>
<div>문제설명: <%= problem.description %></div>
<div id="editor-continer">
  <form
    id="code-editor-form"
    action="/problems/<%= problem._id %>"
    method="post"
    name="code"
  >
    <textarea id="code-input" form="code-editor-form" name="input"></textarea>
  </form>
  <button form="code-editor-form" class="editor-submit-button">제출</button>
</div>
<script>
  const myCodeMirror = CodeMirror.fromTextArea(document.querySelector("#code-input"), {
    lineNumbers: true,
    tabSize: 2,
    value: "//정답코드를 작성해주세요.\n",
    mode: "javascript",
  });

  myCodeMirror.setValue("//solution 함수를 작성해주세요.\nfunction solution(n) {}");
</script>
